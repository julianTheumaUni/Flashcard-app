<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="260dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_flashcard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:id="@+id/linear_layout_category_card_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_blue_secondary"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/text_view_delete_flashcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:text="X"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_view_flashcard_front_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="12sp"
                android:text="What is an intent?"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="32dp"
                />

            <TextView
                android:id="@+id/text_view_flashcard_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
